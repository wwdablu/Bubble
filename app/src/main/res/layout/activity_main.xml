<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--
    Photo by Spencer Selover from Pexels
    https://www.pexels.com/photo/beauty-blur-casual-close-up-428377/
    This image has been used as the background for BubbleView
    -->

    <com.soumya.wwdablu.bubble.BubbleView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bubble_bg"
        app:bubbleBump="false"
        app:bubbleColor="#88FFFFFF"
        app:bubbleCount="10"
        app:bubbleSpeed="2"
        app:bubbleWidth="50dp"
        app:bubbleHeight="50dp"
        app:refreshTime="16"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        />

</FrameLayout>